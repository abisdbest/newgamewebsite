        { "id": "logon_bg", "path": "./img/logon/bg.png" },
        { "id": "logo_bg", "path": "./img/logon/logo.png" }
    ],
    "previewFakeElements": [
        {
            "target": ".window-dlg",
            "elements": [
                { "class": "xpborder-W", "type": "div", "mode": "append" },
                { "class": "xpborder-E", "type": "div", "mode": "append" },
                { "class": "xpborder-S", "type": "div", "mode": "append" }
            ]
        }
    ],
    "scripts": [
        "./theme.js"
    ],
    "rebootSuggested": true,
    "variants": [
