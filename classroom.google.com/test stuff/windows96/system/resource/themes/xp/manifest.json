{
	"id": "xp",
	"name": "XP",
	"description": "XP Theme",
	"author": "Windows 96 Team",
	"themeType": "normal",
	"iconTheme": "W:/system/resource/icons/xp",
	"soundPack": "W:/system/resource/sounds/xp",
    "stylesheets": [
		"./wm.css",
        "./taskbar.css",
        "./xpui.css",
        "./start-menu.css",
        "./shutdown-menu.css"
	],
    "resourceMap": [
        { "id": "taskbar_bg", "path": "./img/taskbar/bg.png" },
        { "id": "notify_bg", "path": "./img/taskbar/notify-bg.png" },
        { "id": "start_btn", "path": "./img/taskbar/start.png" },
        { "id": "tb_item", "path": "./img/taskbar/taskbar-item.png" },
        { "id": "wm_sheet", "path": "./img/window/window_sheet.png" },
