{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "Pong",
  "description": "Single & Multiplayer Pong",
  "version": "1",
  "content_security_policy": "script-src 'self' https://www.google-analytics.com/; http://arcadepong.io/; object-src 'self'",
  "permissions": ["https://www.google-analytics.com/*", "http://arcadepong.io/*"],

  "icons": { "16": "pong3.png",
             "48": "pong3.png",
            "128": "pong3.png" },

  "browser_action": {
    "default_popup": "index.html"
  }

}
